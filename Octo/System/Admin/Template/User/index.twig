{% extends "@admin/layout.twig" %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body no-padding">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th width="170px">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                        <tr>
                            <td>
                                <i class="fa fa-user"></i> &nbsp;

                                {{ user.name }}

                                {% if user.is_admin != true %}
                                    &nbsp; <label class="label label-warning"><i class="fa fa-lock"></i> &nbsp; Restricted</label>
                                {% endif %}
                            </td>
                            <td>{{ user.email }}</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-default btn-sm" href="{{ adminUri }}/user/edit/{{ user.id }}">Edit</a>
                                    <a class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);"><span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{{ adminUri }}/user/edit/{{ user.id }}">Edit</a>
                                        </li>

                                        {% if user.is_admin != true %}
                                        <li>
                                            <a href="{{ adminUri }}/user/permissions/{{ user.id }}">Manage Permissions</a>
                                        </li>
                                        {% endif %}

                                        <li class="divider"></li>

                                        <li>
                                            <a href="{{ adminUri }}/user/delete/{{ user.id }}" class="btn-delete">Delete</a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
